{
  "name": "gh-api-guard",
  "version": "1.2.0",
  "description": "Allow only safe read-only gh api commands",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/check-gh-api.py\"",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
