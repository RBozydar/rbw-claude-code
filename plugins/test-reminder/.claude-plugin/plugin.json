{
  "name": "test-reminder",
  "version": "1.0.0",
  "description": "Remind to add tests when creating new Python files",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/test_reminder.py\"",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
