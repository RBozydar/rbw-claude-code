{
  "name": "safety-guard",
  "version": "1.0.0",
  "description": "Block destructive file operations and supply chain attacks",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/safety_guard_bash.py\"",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/safety_guard_read.py\"",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
