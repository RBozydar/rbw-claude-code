{
  "name": "enforce-uv",
  "version": "1.0.0",
  "description": "Block bare python/pip/pytest commands, enforce uv usage",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/enforce_uv.py",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
