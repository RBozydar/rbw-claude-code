{
  "name": "git-safety-guard",
  "version": "1.0.0",
  "description": "Block destructive git commands to prevent data loss",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/git_safety_guard.py\"",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
