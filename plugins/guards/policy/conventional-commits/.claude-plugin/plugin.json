{
  "name": "conventional-commits",
  "version": "2.1.0",
  "description": "Validate git commit messages follow conventional format",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/conventional_commits.py\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/post_validate_commit.py\"",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
