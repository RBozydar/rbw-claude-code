{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PLUGIN_DIR/hooks/safety_guard_bash.py\"",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PLUGIN_DIR/hooks/safety_guard_read.py\"",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
